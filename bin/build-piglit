#!/bin/bash
set -e
platform checkactive
cd "$PLATFORM_ROOT_DIR/piglit/source"
git fetch "$HOME/piglit" HEAD
git reset --hard FETCH_HEAD
git tag -d build || true
cd "$PLATFORM_ROOT_DIR/piglit/build"
num_jobs=`getconf _NPROCESSORS_ONLN`
make "-j$num_jobs"
cd "$PLATFORM_ROOT_DIR/piglit/source"
git tag build
