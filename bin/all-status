#!/bin/bash
IFS=$'\n'
DIRS=`find ~ -type d -name '.platform' -prune -o -name '.git' -print`
for x in $DIRS; do
    status="`cd "$x"; cd ..; git status -s -b`"
    if [[ "$status" != "" ]]; then
        printf "%-30s " "`cd "$x"; cd ..; pwd-nice`:"
        for line in $status; do
            echo "  $line"
        done
    fi
done
